[
  {
    "protocol": 3032023,
    "configSchema": {
      "$defs": {
        "Advanced": {
          "properties": {
            "is_sandbox": {
              "default": false,
              "description": "Check if you are using a Braintree Sandbox environment.",
              "title": "Is a Sandbox Environment",
              "type": "boolean"
            }
          },
          "title": "Advanced",
          "type": "object"
        },
        "ApiKey": {
          "properties": {
            "credentials_title": {
              "const": "API Key",
              "default": "API Key",
              "title": "Credentials Title",
              "type": "string"
            },
            "public_key": {
              "secret": true,
              "title": "Public Key",
              "type": "string"
            },
            "private_key": {
              "secret": true,
              "title": "Private Key",
              "type": "string"
            }
          },
          "required": [
            "public_key",
            "private_key"
          ],
          "title": "ApiKey",
          "type": "object"
        }
      },
      "properties": {
        "start_date": {
          "description": "UTC date and time in the format YYYY-MM-DDTHH:MM:SSZ. Any Braintree data generated before this date will not be replicated. If left blank, the start date will be set to 30 days before the present date.",
          "format": "date-time",
          "title": "Start Date",
          "type": "string"
        },
        "merchant_id": {
          "description": "Braintree Merchant ID associated with your account.",
          "title": "Merchant ID",
          "type": "string"
        },
        "credentials": {
          "discriminator": {
            "mapping": {
              "API Key": "#/$defs/ApiKey"
            },
            "propertyName": "credentials_title"
          },
          "oneOf": [
            {
              "$ref": "#/$defs/ApiKey"
            }
          ],
          "title": "Authentication"
        },
        "advanced": {
          "$ref": "#/$defs/Advanced",
          "advanced": true,
          "description": "Advanced settings for the connector.",
          "title": "Advanced Config"
        }
      },
      "required": [
        "merchant_id",
        "credentials"
      ],
      "title": "EndpointConfig",
      "type": "object"
    },
    "resourceConfigSchema": {
      "additionalProperties": false,
      "description": "ResourceConfig is a common resource configuration shape.",
      "properties": {
        "name": {
          "description": "Name of this resource",
          "title": "Name",
          "type": "string"
        },
        "interval": {
          "default": "PT0S",
          "description": "Interval between updates for this resource",
          "format": "duration",
          "title": "Interval",
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "title": "ResourceConfig",
      "type": "object"
    },
    "documentationUrl": "https://go.estuary.dev/source-braintree-native",
    "resourcePathPointers": [
      "/name"
    ]
  }
]
